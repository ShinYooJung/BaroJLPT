            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="+10xp"
            android:textSize="25dp"
            android:onClick="recoPrac"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
